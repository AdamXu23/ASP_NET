@model DeviceOptions
@inject IDeviceService deviceService

@{
    ViewData["Title"] = "InjectSelectionWithOptions";
}

<h1>@deviceService.ChooseCaption</h1>

<form>
    <label asp-for="Ram">記憶體</label>
    <select asp-for="Ram" asp-items="deviceService.GetDramList().Select(x=>new SelectListItem { Text=x, Value=x })"></select>
    <br />

    <label asp-for="Cpu">CPU</label>
    <select asp-for="Cpu" asp-items="deviceService.GetCpuList().Select(x=>new SelectListItem { Text=x, Value=x })"></select>
    <br />

    <label asp-for="Gpu">GPU</label>
    <select asp-for="Gpu" asp-items="deviceService.GetGpuList().Select(x=>new SelectListItem { Text=x, Value=x })"></select>
    <br />

    <label asp-for="Storage">儲存</label>
    <select asp-for="Storage" asp-items="deviceService.GetSsdList().Select(x=>new SelectListItem { Text=x, Value=x })"></select>
    <br />

</form>